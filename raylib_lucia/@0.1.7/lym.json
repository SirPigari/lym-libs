{
    "ignore": [
        "lib/*.a",
        "lib/bindings/"
    ],
    "supported_platforms": [
        "windows",
        "linux",
        "macos"
    ],
    "platform_ignore": {
        "windows": [
            "lib/*.so",
            "lib/*.dylib"
        ],
        "linux": [
            "lib/*.dll",
            "lib/*.dylib"
        ],
        "macos": [
            "lib/*.dll",
            "lib/*.so"
        ]
    },
    "options": {
        "overwrite_existing": false,
        "update_fresh": false
    }
}